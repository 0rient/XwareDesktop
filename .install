pre_install() {
    useradd --no-create-home --user-group --shell /bin/false --system xware
}

post_install() {
    echo
    echo "欢迎使用Xware Desktop。"
    echo "如果在此之前，你使用过xware，请删除/tmp/thunder。"
    chown -R xware:xware /opt/xware_desktop
}

post_upgrade() {
    post_install
}

pre_upgrade() {
    echo "pre_upgrade"
    rm -f /opt/xware_desktop/xware/portal
    rm -f /opt/xware_desktop/xware/lib/EmbedThunderManager
    rm -f /opt/xware_desktop/xware/lib/ETMDaemon
}

pre_remove() {
    echo "pre_remove"
    rm -f /opt/xware_desktop/xware/portal
    rm -f /opt/xware_desktop/xware/lib/EmbedThunderManager
    rm -f /opt/xware_desktop/xware/lib/ETMDaemon
}

